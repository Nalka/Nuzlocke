<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.barkatit.nuzlocke.data.model.PokemonGender"/>
        <import type="android.text.TextUtils"/>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.barkatit.nuzlocke.ui.pokemon_details.PokemonDetailsViewModel" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/action_bar"
            layout="@layout/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iv_sprite"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:spriteImage="@{viewModel.pokemonObservableField.speciesId}"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.pokemonObservableField.name}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tv_species"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/iv_sprite"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Rzepa" />

                <TextView
                    android:id="@+id/tv_species"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.pokemonObservableField.species}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    app:layout_constraintBottom_toTopOf="@+id/tv_level_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/iv_sprite"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name"
                    tools:text="Bulbasaur" />

                <TextView
                    android:id="@+id/tv_level_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/party_item_level_label"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_sprite"
                    app:layout_constraintStart_toEndOf="@+id/iv_sprite"
                    app:layout_constraintTop_toBottomOf="@+id/tv_species"
                    tools:text="Lvl." />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@{Integer.toString(viewModel.pokemonObservableField.level)}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_level_label"
                    app:layout_constraintStart_toEndOf="@+id/tv_level_label"
                    app:layout_constraintTop_toTopOf="@+id/tv_level_label"
                    tools:text="61" />

                <ImageView
                    android:id="@+id/iv_gender_sprite"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_sprite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_species"
                    android:src="@{viewModel.pokemonObservableField.gender == PokemonGender.FEMALE ? @drawable/gender_female : viewModel.pokemonObservableField.gender == PokemonGender.MALE ? @drawable/gender_male : null}"/>

                <TextView
                    android:id="@+id/tv_type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/pokemon_details_type_label"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_sprite" />

                <TextView
                    android:id="@+id/tv_type_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    android:text="@{viewModel.pokemonObservableField.type}"
                    app:backgroundResource="@{viewModel.pokemonType1ObservableField.colorId}"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_type_label"
                    app:layout_constraintEnd_toStartOf="@+id/tv_type_2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/iv_sprite"
                    app:layout_constraintTop_toTopOf="@+id/tv_type_label"
                    tools:background="@color/pokemon_type_normal"
                    tools:text="Normal" />

                <TextView
                    android:id="@+id/tv_type_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    android:visibility="@{TextUtils.isEmpty(viewModel.pokemonObservableField.subType) ? View.GONE : View.VISIBLE}"
                    android:text="@{viewModel.pokemonObservableField.subType}"
                    app:backgroundResource="@{viewModel.pokemonType2ObservableField.colorId}"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_type_label"
                    app:layout_constraintEnd_toEndOf="@+id/iv_gender_sprite"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_type_1"
                    app:layout_constraintTop_toTopOf="@+id/tv_type_label"
                    tools:background="@color/pokemon_type_normal"
                    tools:text="Normal" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/label_barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="end"
                    app:constraint_referenced_ids="tv_nature_label,tv_level_met_label,tv_place_met_label,tv_caught_on_label"/>

                <TextView
                    android:id="@+id/tv_nature_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:text="@string/pokemon_details_nature_label"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_type_1" />

                <TextView
                    android:id="@+id/tv_nature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    android:text="@{viewModel.pokemonObservableField.nature}"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_nature_label"
                    app:layout_constraintTop_toTopOf="@+id/tv_nature_label"
                    app:layout_constraintStart_toEndOf="@+id/label_barrier"
                    tools:text="Helpful" />

                <TextView
                    android:id="@+id/tv_level_met_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="14dp"
                    android:gravity="center_vertical"
                    android:text="@string/pokemon_details_level_met_label"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_nature_label" />

                <TextView
                    android:id="@+id/tv_level_met"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    android:text="@{Integer.toString(viewModel.pokemonObservableField.levelMet)}"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_level_met_label"
                    app:layout_constraintTop_toTopOf="@+id/tv_level_met_label"
                    app:layout_constraintStart_toEndOf="@+id/label_barrier"
                    tools:text="10" />

                <TextView
                    android:id="@+id/tv_place_met_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="14dp"
                    android:gravity="center_vertical"
                    android:text="@string/pokemon_details_location_label"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_level_met_label" />

                <TextView
                    android:id="@+id/tv_place_met"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    android:text="@{viewModel.pokemonObservableField.placeMet}"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_place_met_label"
                    app:layout_constraintTop_toTopOf="@+id/tv_place_met_label"
                    app:layout_constraintStart_toEndOf="@+id/label_barrier"
                    tools:text="Route 12" />

                <TextView
                    android:id="@+id/tv_caught_on_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="14dp"
                    android:gravity="center_vertical"
                    android:text="@string/pokemon_details_caught_label"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_place_met_label" />

                <TextView
                    android:id="@+id/tv_caught_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    android:text="@{viewModel.getFormattedDate(viewModel.pokemonObservableField.caught)}"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_caught_on_label"
                    app:layout_constraintTop_toTopOf="@+id/tv_caught_on_label"
                    app:layout_constraintStart_toEndOf="@+id/label_barrier"
                    tools:text="29.10.2019 15:43" />

                <View
                    android:id="@+id/separator"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/colorAccent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_caught_on_label"
                    />

                <TextView
                    android:id="@+id/tv_stats_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="14dp"
                    android:text="@string/pokemon_details_stats_label"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/separator" />

                <TextView
                    android:id="@+id/tv_hp_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="14dp"
                    android:text="@string/pokemon_details_hit_points_label"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_left_quarter"
                    app:layout_constraintTop_toBottomOf="@+id/tv_stats_label" />

                <TextView
                    android:id="@+id/tv_hit_points"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    android:text="@{Integer.toString(viewModel.pokemonObservableField.hp)}"
                    app:layout_constraintTop_toTopOf="@+id/tv_hp_label"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_hp_label"
                    app:layout_constraintStart_toEndOf="@+id/guideline_left_quarter"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_middle"
                    tools:text="50"
                    />

                <TextView
                    android:id="@+id/tv_attack_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="14dp"
                    android:text="@string/pokemon_details_attack_label"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_left_quarter"
                    app:layout_constraintTop_toBottomOf="@+id/tv_hp_label" />

                <TextView
                    android:id="@+id/tv_attack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    android:text="@{Integer.toString(viewModel.pokemonObservableField.attack)}"
                    app:layout_constraintTop_toTopOf="@+id/tv_attack_label"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_attack_label"
                    app:layout_constraintStart_toEndOf="@+id/guideline_left_quarter"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_middle"
                    tools:text="50"
                    />

                <TextView
                    android:id="@+id/tv_defence_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="14dp"
                    android:text="@string/pokemon_details_defence_label"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_left_quarter"
                    app:layout_constraintTop_toBottomOf="@+id/tv_attack_label" />

                <TextView
                    android:id="@+id/tv_defence"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    android:text="@{Integer.toString(viewModel.pokemonObservableField.defence)}"
                    app:layout_constraintTop_toTopOf="@+id/tv_defence_label"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_defence_label"
                    app:layout_constraintStart_toEndOf="@+id/guideline_left_quarter"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_middle"
                    tools:text="50"
                    />

                <TextView
                    android:id="@+id/tv_special_attack_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="14dp"
                    android:text="@string/pokemon_details_special_attack_label"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    app:layout_constraintStart_toEndOf="@+id/guideline_middle"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_right_quarter"
                    app:layout_constraintTop_toBottomOf="@+id/tv_stats_label" />

                <TextView
                    android:id="@+id/tv_special_attack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    android:text="@{Integer.toString(viewModel.pokemonObservableField.specialAttack)}"
                    app:layout_constraintTop_toTopOf="@+id/tv_special_attack_label"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_special_attack_label"
                    app:layout_constraintStart_toEndOf="@+id/guideline_right_quarter"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="50"
                    />

                <TextView
                    android:id="@+id/tv_special_defence_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="14dp"
                    android:text="@string/pokemon_details_special_defence_label"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    app:layout_constraintStart_toEndOf="@+id/guideline_middle"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_right_quarter"
                    app:layout_constraintTop_toBottomOf="@+id/tv_special_attack_label" />

                <TextView
                    android:id="@+id/tv_special_defence"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    android:text="@{Integer.toString(viewModel.pokemonObservableField.specialDefence)}"
                    app:layout_constraintTop_toTopOf="@+id/tv_special_defence_label"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_special_defence_label"
                    app:layout_constraintStart_toEndOf="@+id/guideline_right_quarter"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="50"
                    />

                <TextView
                    android:id="@+id/tv_speed_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="14dp"
                    android:text="@string/pokemon_details_speed_label"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    app:layout_constraintStart_toEndOf="@+id/guideline_middle"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_right_quarter"
                    app:layout_constraintTop_toBottomOf="@+id/tv_special_defence_label" />

                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    android:text="@{Integer.toString(viewModel.pokemonObservableField.speed)}"
                    app:layout_constraintTop_toTopOf="@+id/tv_speed_label"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_speed_label"
                    app:layout_constraintStart_toEndOf="@+id/guideline_right_quarter"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="50"
                    />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_left_quarter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.25" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_right_quarter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>